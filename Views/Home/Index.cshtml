@{
    ViewData["Title"] = "Home Page";
    Layout = "_LoginLayout";
}


 <div class="container-fluid bg-blue">
        <div class="row vh-100 bg-img">
            <!-- Pizza image left section -->
            <div class="col-md-6 d-none d-md-block p-0">
                <img src="images/dominos_background.jpg" alt="pizza" class="hero-img">
            </div>
            
            <!-- Right section -->
            <div class="col-12 col-md-6 my-auto d-flex justify-content-center align-items-center right-section">
                <div class="w-75 d-flex justify-content-center flex-column ">
                    <div class="d-flex align-items-center justify-content-center mb-4">
                        <img src="images/logos/pizzashop_logo.png" class="pizzashop_logo me-2">
                        <span class="fs-1 hero-heading">PIZZASHOP</span>
                    </div>
    
                    <div class="d-flex">
                        <p class="fs-2 fw-bold">Welcome,</p>
                    </div>
                    
                    <div class="">
                       <form class="" asp-action="Index">
                            <!-- Email -->
                            <div class="input-group mb-3">
                              <input type="email" class="form-control login-input p-2" id="inputEmail" placeholder=" Email*">
                              <span class="input-group-text"><img src="images/icons/customer.svg"></span>
                            </div>

                            <!-- Password -->
                            <div class="input-group mb-3">
                              <input type="password" class="form-control login-input p-2" id="inputPassword1" placeholder=" Password*">
                              <span class="input-group-text"><img src="images/icons/hidden.png" width="16px"></span>
                            </div>

                            <!--Remember me and Forget Password-->
                            <div class="mb-3 d-flex justify-content-between rem_pass">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                    <label class="form-check-label" for="exampleCheck1">Remember me</label>
                                </div>
                                <div>
                                    <a href="forgot-password.html" class="text-decoration-none">Forgot password?</a>
                                </div>
                            </div>

                            <div>
                                <button type="submit" class="btn login-btn w-100">Login</button>
                            </div>
                      </form>
                    </div>

                </div>
            </div>
        </div>        
    </div>