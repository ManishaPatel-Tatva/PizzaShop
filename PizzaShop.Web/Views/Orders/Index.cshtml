@using PizzaShop.Entity.Models
@using PizzaShop.Entity.ViewModels
@model OrderIndexViewModel

@{
    ViewData["Title"] = "Orders";
    Layout = "_Layout";
}


<!-- User heading, search and add button -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-3 ">
    <div>
        <h1 class="blue-text">Orders</h1>
    </div>

    <div class="justify-content-end d-flex flex-column flex-md-row order-export-div">

        <div class="input-group me-2">
            <input type="search" class="form-control" placeholder="Search" name="search" id="searchOrder">
            <button type="submit" class="input-group-text">
                <img src="~/images/icons/search.svg" alt="">
            </button>
        </div>

        <select asp-for="@Model.StatusId" class="form-select me-2">
            <option selected value="-1">All Status</option>
            @foreach (OrderStatus status in Model.Statuses)
            {
                <option value="@status.Id"> @status.Name</option>
            }
        </select>

        <select class="form-select me-2" id="dateRange">
            <option selected value="all">All Time</option>
            <option value="7">Last 7 Days</option>
            <option value="30">Last 30 Days</option>
            <option value="month">Current Month</option>
        </select>

        <a asp-action="SaveOrder" asp-controller="Orders" class="btn btn-blue text-nowrap d-flex align-items-center" id="exportOrderData">
            <img src="~/images/icons/export-icon.svg" alt="" width="25px" />
            Export
        </a>

    </div>
</div>

<div class="d-flex flex-column flex-sm-row justify-content-end align-items-center mb-3 ">

    <div class="d-flex flex-column flex-sm-row justify-content-end d-flex align-items-center dateRange-div">

        <div class="col-12 col-sm-6 form-floating me-2">
            <input type="date" class="form-control" id="fromDate" placeholder="">
            <label for="fromDate">From Date</label>
        </div>
        <div class="col-12 col-sm-6 form-floating me-2">
            <input type="date" class="form-control" id="toDate" placeholder="">
            <label for="toDate">To Date</label>
        </div>


        <button class="btn btn-blue text-nowrap me-2 px-4 py-2" id="searchByDate">
            Search
        </button>
        <button class="btn btn-white text-nowrap me-2 px-4 py-2" id="clear">
            Clear
        </button>

    </div>
</div>

<!-- Table -->
<div class="table-responsive bg-white px-3" id="orderContent">
    <!-- Partial View -->


</div>


@section Scripts {
    @* Order Pagination *@
    <script>
        $(document).ready(function () {
            OrderPaginationAjax(1);
        });

        $(document).on("change", "#ordersPerPage", function () {
            OrderPaginationAjax(1); // Reload data with new page size
        });

        $(document).on("input", "#searchOrder", function () {
            OrderPaginationAjax(1); // Reload data with new page size
        });

        function OrderPaginationAjax(pageNumber) {

            let pageSize = $("#ordersPerPage").val() || 5; // Default to 5 if no value selected
            let searchOrder = $("#searchOrder").val();

            console.log("Orders OrderPaginationAjax ajax");

            $.ajax({
                url: '@Url.Action("GetOrdersList", "Orders")',
                data: {
                    'pageSize': pageSize,
                    'pageNumber': pageNumber,
                    'search': searchOrder
                },
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $("#orderContent").html(data);
                    $("#ordersPerPage").val(pageSize); // Reapply selected value after reload
                },
                error: function () {
                    console.log("There is error.Not successful");
                    alert("No Items Found");
                    $("#itemsListContent").html('An error has occurred');
                }
            });
        }
    </script>
}